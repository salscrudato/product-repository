# ============================================================================
# Insurance Product Repository - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# All variables must use the VITE_ prefix for Vite to expose them to the client

# ============================================================================
# Firebase Configuration
# ============================================================================
# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# ============================================================================
# Firebase Emulators (Development Only)
# ============================================================================
# Set to 'true' to use local Firebase emulators instead of production
# Make sure to run: firebase emulators:start
VITE_USE_FIREBASE_EMULATORS=false

# ============================================================================
# OpenAI Configuration
# ============================================================================
# OpenAI API key for AI-powered features
# Get your key from: https://platform.openai.com/api-keys
# IMPORTANT: For production, store this in Firebase Functions environment
# Do NOT commit this key to version control
VITE_OPENAI_KEY=your_openai_api_key_here

# ============================================================================
# News API Configuration
# ============================================================================
# NewsData.io API key for insurance news feed
# Get your key from: https://newsdata.io/
VITE_NEWSDATA_KEY=your_newsdata_api_key
