rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             request.auth.token.role == 'admin';
    }

    function isProductManager() {
      return isAuthenticated() &&
             (request.auth.token.role == 'admin' ||
              request.auth.token.role == 'product_manager');
    }

    function isValidTimestamp(field) {
      return request.resource.data[field] is timestamp;
    }

    // Products - Read/Write: All users (including anonymous)
    match /products/{productId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();

      // Coverages subcollection
      match /coverages/{coverageId} {
        allow read, create, update: if true;
        allow delete: if isAdmin();

        // Limits subcollection
        match /limits/{limitId} {
          allow read, create, update: if true;
          allow delete: if isAdmin();
        }

        // Deductibles subcollection
        match /deductibles/{deductibleId} {
          allow read, create, update: if true;
          allow delete: if isAdmin();
        }
      }

      // Pricing steps subcollection
      match /steps/{stepId} {
        allow read, create, update: if true;
        allow delete: if isAdmin();
      }
    }

    // Forms - Read/Write: All users (including anonymous)
    match /forms/{formId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();
    }

    // Form-Coverage mappings
    match /formCoverages/{mappingId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();
    }

    // Business Rules
    match /rules/{ruleId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();
    }

    // Tasks - All users can read/write
    match /tasks/{taskId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();
    }

    // Data Dictionary - Read: All, Write: Admins only
    match /dataDictionary/{entryId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // News - Read: All, Write: Admins only
    match /news/{newsId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Audit logs - Read: Product Managers+, Write: Authenticated users
    match /auditLogs/{logId} {
      allow read: if isProductManager();
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Audit logs are immutable
    }

    // User profiles
    match /users/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Collection group queries for coverages (allows collectionGroup queries)
    match /{path=**}/coverages/{coverageId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();

      // Limits subcollection
      match /limits/{limitId} {
        allow read, create, update: if true;
        allow delete: if isAdmin();
      }

      // Deductibles subcollection
      match /deductibles/{deductibleId} {
        allow read, create, update: if true;
        allow delete: if isAdmin();
      }
    }

    // Collection group queries for pricing steps
    match /{path=**}/steps/{stepId} {
      allow read, create, update: if true;
      allow delete: if isAdmin();
    }
  }
}